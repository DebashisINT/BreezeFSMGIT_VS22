    {
        if (ViewData["Success"] != null)
        {
            if (Convert.ToBoolean(ViewData["Success"]))
            {
                e.Properties["cpBatchUpdate"] = "1";
            }
        }
        else
        {
            e.Properties["cpBatchUpdate"] = "0";
        }

